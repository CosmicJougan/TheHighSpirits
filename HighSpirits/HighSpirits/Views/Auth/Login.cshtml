@model LoginCredentials;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    
</head>
<body class="m-3 midden">
    <form asp-action="Login" asp-controller="auth">
        <p class="text-center"><img class="artikelKlein" src="~/images/HighSpiritsLogo.png" /></p><h2>Inloggen</h2>
        <div>
            <div>   
            <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>
                    <input type="text" asp-for="Gebruikersnaam" placeholder=" Gebruikersnaam" /><span class="fout" asp-validation-for="Gebruikersnaam"></span>
            </p>
            </div>
            <div>
                
            <p>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                    <input type="password" asp-for="Wachtwoord" placeholder=" Wachtwoord" /><span class="fout" asp-validation-for="Wachtwoord"></span>
            </p>
            </div>
            <p><input class="btn btn-dark" type="submit" value="Meld mij aan..." /> </p>
            <p>Geen account? <a asp-action="Registreer" class="geenLijn">Registreer hier...</a></p>
        </div>
                
        <p class="fout">@ViewBag.fout</p>
    </form>
</body>
</html>
