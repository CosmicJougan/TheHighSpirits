@model ProductRepository;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Webshop</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="m-3">
    <form asp-action="Index" asp-controller="Home">
        <p class="text-center"><img class="artikelKlein" src="~/images/HighSpiritsLogo.png"/></p>
        <h3 class="text-center">Make driving great again</h3>
        <table class="table text-center">
            <tr class="table-dark">
                <td>
                    Artikel nr.
                </td>
                <td>
                    Naam
                </td>
                <td>
                    Foto
                </td>
                <td>
                    Verkoopprijs
                </td>
                <td>
                    Voorraad
                </td>
                <td>
                    <a asp-action="Winkelmandje">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-cart" viewBox="0 0 18 18">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                    </a>
                </td>
            </tr>
            @foreach(var artikel in Model.Producten){
                <tr>
                    <td>
                        @artikel.ProductID
                    </td>
                    <td>
                        @artikel.ProductNaam
                    </td>
                    <td>
                        <img class="artikelKlein" src="@Url.Content("~/images/"+@artikel.Foto)"/>
                    </td>
                    <td>
                        @artikel.Verkoopprijs
                    </td>
                    <td>
                        @artikel.Voorraad
                    </td>
                    <td>
                        <p><a asp-action="Toevoegen" asp-route-ProductID="@artikel.ProductID" class="geenLijn">Voeg toe aan winkelmandje...</a></p>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="6">
                    <input class="btn btn-dark" type="submit" value="Naar winkelmandje..." />
                    <p>
                        <a asp-action="Afmelden" asp-controller="Auth">afmelden</a>
                    </p>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
